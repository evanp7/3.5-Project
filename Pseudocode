    // Ask again
    boolean flag = false;
    print "Would you like to add more names and scores?"

    while flag = true
      if userInput is yes
      {
        print "Input the name"
        scanner get userInput
        write to nsFile         
        print "Input the score"
        scanner get userInput
        write to nsFile
        flag = true
       } 
      else 
      {
        flag = false
      }

